//program to find whether the year entered is a leap year or not


import java.util.Scanner;
class StringPracticeSet3 {
    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the year you want to know about it's leap year stats: ");
        int year = sc.nextInt();
        if(year%4==0){
            System.out.println("Year is a leap year");
        }
        else{
            System.out.println("It is not a leap year");
        }
       
    }
}



